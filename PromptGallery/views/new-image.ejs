<%- include('header') -%>
    <title>Add New Masterpiece</title>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <h1>Add New Masterpiece</h1>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group" >
                        <label for="imageUpload">Upload Image</label>
                        <input type="file" class="form-control-file" id="imageUpload" name="image" required>
                    </div>
                    <div class="form-group">
                        <label for="promptInput">Image Prompt</label>
                        <input type="text" class="form-control" id="promptInput" name="prompt" placeholder="Enter a prompt for your image" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Upload Masterpiece</button>
                        <a onclick="window.location.href ='/dashboard/<%= user._id %>';" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
<%- include('header') -%>